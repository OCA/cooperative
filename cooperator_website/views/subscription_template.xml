<odoo>

    <template id="contact_template" name="contact_template">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 field-firstname" name="firstname_container">
                    <label for="firstname" class="form-label">First Name</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'firstname' in error and ' is-invalid' or '' }}"
                        id="firstname"
                        type="text"
                        name="firstname"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="firstname"
                        placeholder="Didier"
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 field-lastname" name="lastname_container">
                    <label for="lastname" class="form-label">Last Name</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'lastname' in error and ' is-invalid' or '' }}"
                        id="lastname"
                        type="text"
                        name="lastname"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="lastname"
                        placeholder="Bourdon"
                    />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 field-gender" name="gender_container">
                    <label for="gender" class="form-label">Gender</label>
                    <select
                        t-attf-class="form-select form-select-sm{{ error and 'gender' in error and ' is-invalid' or '' }}"
                        id="gender"
                        name="gender"
                        required="true"
                        t-att-readonly="logged"
                    >
                        <option value="">
                            <t t-foreach="genders or []" t-as="type">
                                <option
                                    t-att-value="type[0]"
                                    t-att-selected="type[0] == gender"
                                >
                                    <t t-out="type[1]" />
                                </option>
                            </t>
                        </option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 field-birthdate" name="birthdate_container">
                    <label for="birthdate" class="form-label">Date of birth</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'birthdate' in error and ' is-invalid' or '' }}"
                        type="date"
                        name="birthdate"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="birthdate"
                        placeholder="1978-03-05"
                    />
                </div>
            </div>
        </div>
        <div class="mb-3 field-phone" name="phone_container">
            <label for="phone" class="form-label">Phone</label>
            <input
                t-attf-class="form-control form-control-sm{{ error and 'phone' in error and ' is-invalid' or '' }}"
                id="phone"
                type="tel"
                name="phone"
                required="true"
                t-att-readonly="logged"
                t-att-value="phone"
                placeholder="+32 456 926 5059"
            />
        </div>
        <div class="mb-3 field-lang" name="lang_container">
            <label for="lang" class="form-label">Language</label>
            <select
                t-attf-class="form-select form-select-sm{{ error and 'lang' in error and ' is-invalid' or '' }}"
                id="lang"
                name="lang"
                required="true"
            >
                <t t-foreach="langs or []" t-as="language">
                    <option
                        t-att-value="language.code"
                        t-att-selected="language.code == lang"
                    >
                        <t t-out="language.name" />
                    </option>
                </t>
            </select>
        </div>
    </template>

    <template id="iban_template" name="iban_template">
        <div name="iban_template_container">
            <!--
                Empty container to be filled by Cooperator localization
                modules
            -->
        </div>
    </template>

    <template id="address_template" name="address_template">
        <div class="mb-3 field-address" name="address_container">
            <label for="address" class="form-label">Address</label>
            <input
                t-attf-class="form-control form-control-sm{{ error and 'address' in error and ' is-invalid' or '' }}"
                type="text"
                name="address"
                id="address"
                required="true"
                t-att-readonly="logged"
                t-att-value="address"
                placeholder="rue Van Hove 199"
            />
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 field-city" name="city_container">
                    <label for="city" class="form-label">City</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'city' in error and ' is-invalid' or '' }}"
                        id="city"
                        type="text"
                        name="city"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="city"
                        placeholder="Bruxelles"
                    />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 field-zip_code" name="zip_code_container">
                    <label for="zip_code" class="form-label">Zip / Postal Code</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'zip_code' in error and ' is-invalid' or '' }}"
                        id="zip_code"
                        type="text"
                        name="zip_code"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="zip_code"
                        placeholder="1030"
                    />
                </div>
            </div>
        </div>
        <div class="mb-3 field-country" name="country_container">
            <label for="country_id" class="form-label">Country</label>
            <select
                t-attf-class="form-select form-select-sm{{ error and 'country_id' in error and ' is-invalid' or '' }}"
                id="country_id"
                name="country_id"
                required="true"
                t-att-readonly="logged"
            >
                <option value="">Country...</option>
                <t t-foreach="countries or []" t-as="country">
                    <option
                        t-att-value="country.id"
                        t-att-selected="country.id == int(country_id)"
                    >
                        <t t-out="country.name" />
                    </option>
                </t>
            </select>
        </div>
    </template>

    <template id="rules_template" name="rules_template">
        <div
            t-if="res_company.allow_id_card_upload"
            class="mb-3 field-file"
            name="identity_card_scan_container"
        >
            <label
                for="identity_card_scan"
                class="form-label"
            >Identity card scan</label>
            <div class="col-md-7 col-sm-8">
                <input
                    type="file"
                    t-attf-class="form-control form-control-sm{{ error and 'identity_card_scan' in error and ' is-invalid' or '' }}"
                    name="identity_card_scan"
                    t-att-value="identity_card_scan"
                />
            </div>
        </div>
        <div
            id="generic_rules_approved"
            name="generic_rules_approved_container"
            t-if="display_generic_rules"
            class="mb-3"
        >
            <label for="generic_rules_approved" class="form-label">Generic Rules</label>
            <div class="form-check">
                <input
                    type="checkbox"
                    name="generic_rules_approved"
                    class="form-check-input"
                    t-att-required="generic_rules_required"
                    t-att-checked="generic_rules_approved"
                />
                <label class="form-check-label">
                    <t t-out="generic_rules_text" />
                </label>
            </div>
        </div>
        <div
            id="data_policy_approved"
            name="data_policy_approved_container"
            t-if="display_data_policy"
            class="mb-3"
        >
            <label for="data_policy_approved" class="form-label">Privacy Policy</label>
            <div class="form-check">
                <input
                    type="checkbox"
                    class="form-check-input"
                    name="data_policy_approved"
                    t-att-required="data_policy_required"
                    t-att-checked="data_policy_approved"
                />
                <label class="form-check-label">
                    <t t-out="data_policy_text" />
                </label>
            </div>
        </div>
        <div
            id="internal_rules_approved"
            name="internal_rules_approved_container"
            t-if="display_internal_rules"
            class="mb-3"
        >
            <label
                for="internal_rules_approved"
                class="form-label"
            >Internal Rules</label>
            <div class="form-check">
                <input
                    type="checkbox"
                    class="form-check-input"
                    name="internal_rules_approved"
                    t-att-required="internal_rules_required"
                    t-att-checked="internal_rules_approved"
                />
                <label class="form-check-label">
                    <t t-out="internal_rules_text" />
                </label>
            </div>
        </div>
        <div
            id="financial_risk_approved"
            name="financial_risk_approved_container"
            t-if="display_financial_risk"
            class="mb-3"
        >
            <label
                for="financial_risk_approved"
                class="form-label"
            >Financial Risk</label>
            <div class="form-check">
                <input
                    type="checkbox"
                    name="financial_risk_approved"
                    class="form-check-input"
                    t-att-required="financial_risk_required"
                    t-att-checked="financial_risk_approved"
                />
                <label class="form-check-label">
                    <t t-out="financial_risk_text" />
                </label>
            </div>
        </div>
    </template>

    <template id="shares_template" name="shares_template">
        <div class="row" name="share_div">
            <div class="col-md-5">
                <div class="mb-3 field-parts-type" name="share_product_container">
                    <label for="share_product_id" class="form-label">Share type</label>
                    <select
                        t-attf-class="form-select form-select-sm{{ error and 'share_product_id' in error and ' is-invalid' or '' }}"
                        id="share_product_id"
                        name="share_product_id"
                        required="true"
                    >
                        <t t-foreach="products or []" t-as="product">
                            <option
                                t-att-value="product.id"
                                t-att-selected="product.id == int(share_product_id)"
                            >
                                <t t-out="product.short_name" />
                            </option>
                        </t>
                    </select>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <label for="ordered_parts" class="form-label">Share number</label>
                <div class="mb-3" name="share_number_container">
                    <input
                        type="number"
                        name="ordered_parts"
                        id="ordered_parts"
                        step="1"
                        min="1"
                        value="1"
                        class="form-control form-control-sm"
                    />
                </div>
            </div>
            <div class="col-md-3 col-6" name="total_parts_container">
                <div id="share_price" style="display: none;" />
                <label for="total_parts" class="form-label">Total</label>
                <div class="input-group input-group-sm mb-3 has-validation">
                    <span class="input-group-text" t-out="company.currency_id.symbol" />
                    <input
                        type="text"
                        id="total_parts"
                        class="form-control form-control-sm"
                        name="total_parts"
                        t-att-data-max="company.subscription_maximum_amount"
                        t-att-readonly="'readonly'"
                    />
                </div>
            </div>
        </div>
    </template>

    <template id="error_message_template" name="error_message_template">
        <p style="color:red;">
            <t t-out="error_msg" />
        </p>
    </template>

    <template id="csrf_template" name="csrf_template">
        <div name="csrf_token_container">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
        </div>
    </template>

    <template id="main_form_template" name="main_form_template">
        <div id="wrap" class="o_portal_wrap">
            <div class="container oe_cooperator">
                <div class="row justify-content-center">
                    <div class="col-xs-12 col-sm-10  col-md-8 col-lg-6">
                        <h1 class="mt-4 text-center" t-out="title" />
                        <form
                            action="/subscription/subscribe_share"
                            method="post"
                            class="form-horizontal mt32 oe_subscription_request_form"
                            enctype="multipart/form-data"
                        >
                            <t t-call="cooperator_website.error_message_template" />
                            <t t-call="cooperator_website.csrf_template" />
                            <div class="text-center" name="my_account_link_container">
                                <a
                                    class="btn btn-primary"
                                    t-if="logged"
                                    t-attf-href="/my/account"
                                    style="white-space: normal;"
                                >Do you want to modify your personal information first?</a>
                            </div>
                            <div
                                class="mb-3 text-center"
                                name="my_account_link_container"
                            >
                                <t t-if="redirect_url == null">
                                    <t
                                        t-set="redirect_url"
                                        t-value="request.httprequest.url"
                                    />
                                </t>
                                <a
                                    class="btn btn-primary"
                                    t-if="not logged"
                                    t-attf-href="/web/login?redirect={{ redirect_url }}"
                                    style="white-space: normal;"
                                >Do you already have an account?</a>
                                <br />
                            </div>
                            <div
                                class="mb-3"
                                style="display: none;"
                                name="logged_container"
                            >
                                <label>
                                    <input
                                        type="checkbox"
                                        t-att-checked="logged"
                                        name="logged"
                                    />
                                    Logged
                                </label>
                            </div>
                            <t t-out="0" />
                            <div class="mt-3 mb-3 text-center">
                                <button class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="becomecooperator" name="Become Cooperator">
        <t t-call="website.layout">
            <t t-call="cooperator_website.main_form_template">
                <t t-set="title">Become Cooperator</t>
                <div class="mb-3 field-login">
                    <label for="email" class="form-label">Email</label>
                    <input
                        class="form-control form-control-sm"
                        t-attf-class="form-control form-control-sm{{ error and 'email' in error and ' is-invalid' or '' }}"
                        autocapitalize="off"
                        type="email"
                        name="email"
                        id="email"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="email"
                        placeholder="didier.bourdon@mycoop.be"
                    />
                </div>
                <div
                    t-if="not logged"
                    class="mb-3 field-confirm_login"
                    name="confirm_email_container"
                >
                    <label for="confirm_email" class="form-label">Confirm Email</label>
                    <input
                        t-attf-class="form-control form-control-sm{{ error and 'confirm_email' in error and ' is-invalid' or '' }}"
                        autocapitalize="off"
                        type="email"
                        name="confirm_email"
                        id="confirm_email"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="confirm_email"
                        placeholder="didier.bourdon@mycoop.be"
                    />
                </div>
                <t t-call="cooperator_website.contact_template" />
                <t t-call="cooperator_website.iban_template" />
                <t t-call="cooperator_website.address_template" />
                <t t-call="cooperator_website.shares_template" />
                <t t-call="cooperator_website.rules_template" />
            </t>
        </t>
    </template>

    <template id="becomecompanycooperator" name="Become Cooperator as Company">
        <t t-call="website.layout">
            <t t-call="cooperator_website.main_form_template">
                <t t-set="title">Become Cooperator as Company</t>
                <div class="mb-3" style="display: none;" name="is_company_container">
                    <label>
                        <input
                            type="checkbox"
                            t-att-value="is_company"
                            checked="checked"
                            name="is_company"
                        />
                        Is a company?
                    </label>
                </div>
                <h2 class="text-center">Company Info</h2>
                <div
                    class="mb-3 field-company_register_number"
                    name="company_register_number_container"
                >
                    <label for="company_register_number" class="form-label">
                        Company Register Number
                    </label>
                    <input
                        type="text"
                        t-attf-class="form-control form-control-sm{{ error and 'company_register_number' in error and ' is-invalid' or '' }}"
                        name="company_register_number"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="company_register_number"
                        placeholder="0647980091"
                    />
                </div>
                <div class="mb-3 field-company_name" name="company_name_container">
                    <label for="company_name" class="form-label">Company name</label>
                    <input
                        type="text"
                        t-attf-class="form-control form-control-sm{{ error and 'company_name' in error and ' is-invalid' or '' }}"
                        name="company_name"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="company_name"
                        placeholder="Super Cooperative"
                    />
                </div>
                <div class="mb-3 field-company_type" name="company_type_container">
                    <label for="company_type" class="form-label">Company type</label>
                    <select
                        name="company_type"
                        t-attf-class="form-select form-select-sm{{ error and 'company_type' in error and ' is-invalid' or '' }}"
                        required="true"
                        t-att-readonly="logged"
                    >
                        <option value="" />
                        <t t-foreach="company_types or []" t-as="type">
                            <option
                                t-att-value="type[0]"
                                t-att-selected="type[0] == company_type"
                            >
                                <t t-out="type[1]" />
                            </option>
                        </t>
                    </select>
                </div>
                <div class="mb-3 field-company_email" name="company_email_container">
                    <label for="company_email" class="form-label">Company email</label>
                    <input
                        type="text"
                        t-attf-class="form-control form-control-sm{{ error and 'company_email' in error and ' is-invalid' or '' }}"
                        name="company_email"
                        required="true"
                        t-att-value="company_email"
                        placeholder="administration@mycoop.be"
                    />
                </div>
                <div
                    t-if="not logged"
                    class="mb-3 field-confirm_email"
                    name="confirm_email_container"
                >
                    <label for="confirm_email" class="form-label">Confirm Email</label>
                    <input
                        type="confirm_email"
                        t-attf-class="form-control form-control-sm{{ error and 'confirm_email' in error and ' is-invalid' or '' }}"
                        name="confirm_email"
                        t-att-required="not logged"
                        t-att-readonly="logged"
                        t-att-value="confirm_email"
                        placeholder="administration@mycoop.be"
                    />
                </div>
                <t t-call="cooperator_website.iban_template" />
                <h2 class="text-center">Main Address</h2>
                <t t-call="cooperator_website.address_template" />
                <h2 class="text-center">Contact Person</h2>
                <div class="mb-3 field-login">
                    <label for="email" class="form-label">Email</label>
                    <input
                        class="form-control form-control-sm"
                        autocapitalize="off"
                        type="email"
                        name="email"
                        id="email"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="email"
                        placeholder="didier.bourdon@mycoop.be"
                    />
                </div>
                <t t-call="cooperator_website.contact_template" />
                <div
                    class="mb-3 field-function"
                    name="contact_person_function_container"
                >
                    <label for="contact_person_function" class="form-label">
                        Function
                    </label>
                    <input
                        type="text"
                        t-attf-class="form-control form-control-sm{{ error and 'contact_person_function' in error and ' is-invalid' or '' }}"
                        name="contact_person_function"
                        id="contact_person_function"
                        required="true"
                        t-att-readonly="logged"
                        t-att-value="contact_person_function"
                    />
                </div>
                <t t-call="cooperator_website.shares_template" />
                <t t-call="cooperator_website.rules_template" />
            </t>
        </t>
    </template>

    <!--
        this template inherits from the website.page record with xml id
        website.contactus_thanks. the website.page model uses delegation
        inheritance to ir.ui.view and the view gets an automatically generated
        xml id with the "_ir_ui_view" suffix.
    -->
    <template
        id="cooperator_thanks"
        name="Thanks (Cooperator)"
        inherit_id="website.contactus_thanks_ir_ui_view"
        primary="True"
        priority="100"
    >
        <xpath expr="/t[@t-name='website.contactus_thanks']" position="attributes">
            <attribute name="name">Thanks (Cooperator)</attribute>
        </xpath>
        <xpath
            expr="//div[@id='wrap']/section/div/div/div[1]/h5/span[2]"
            position="replace"
        >
            <span>Your subscription has been <b>successfully</b> registered.</span>
        </xpath>
    </template>

    <record id="menu_becomecooperator" model="website.menu">
        <field name="name">Become Cooperator</field>
        <field name="url">/page/become_cooperator</field>
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence" type="int">65</field>
    </record>

</odoo>
