<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="subscription_request_form_inherit" model="ir.ui.view">
            <field
                name="name"
            >account_banking_mandate_cooperator.subscription_request.form</field>
            <field name="model">subscription.request</field>
            <field
                name="inherit_id"
                ref="account_payment_cooperator.subscription_request_form_inherit"
            />
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_mode_id']" position="after">
                    <field
                        name="mandate_id"
                        attrs="{'invisible': [('mandate_required', '=', False)]}"
                    />
                    <field name="mandate_required" invisible="1" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
